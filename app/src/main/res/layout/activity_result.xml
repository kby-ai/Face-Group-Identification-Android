<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Identify Result"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <LinearLayout
        android:id="@+id/lytImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageEnrolled"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <ImageView
            android:id="@+id/imageIdentified"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytImages1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/lytImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageEnrolled1"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <ImageView
            android:id="@+id/imageIdentified1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytImagesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lytImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:text="Enrolled 1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        </TextView>

        <TextView
            android:text="Identified 1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytImagesTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lytImages1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:text="Enrolled 2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        </TextView>

        <TextView
            android:text="Identified 2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/textPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identified 1: Person1"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytImagesTitle1"
        >
    </TextView>

    <TextView
        android:id="@+id/textSimilarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Similarity 1: 0.83"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPerson"
        >
    </TextView>

    <TextView
        android:id="@+id/textLiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liveness score 1: 0.83"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSimilarity"
        >
    </TextView>

    <TextView
        android:id="@+id/textPerson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identified 2: Person1"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLiveness"
        >
    </TextView>

    <TextView
        android:id="@+id/textSimilarity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Similarity 2: 0.83"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPerson1"
        >
    </TextView>

    <TextView
        android:id="@+id/textLiveness1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liveness score 2: 0.83"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSimilarity1"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>